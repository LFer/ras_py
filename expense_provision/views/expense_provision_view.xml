<odoo>
    <data>

        <record id="view_expense_provision_filter" model="ir.ui.view">
            <field name="name">expense.provision.select</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <search string="Search Invoice">
                    <field name="number" string="Invoice" filter_domain="['|','|','|', ('number','ilike',self), ('origin','ilike',self), ('reference', 'ilike', self), ('partner_id', 'child_of', self)]"/>
                </search>
            </field>
        </record>

        <record id="provision_expense_tree" model="ir.ui.view">
            <field name="name">expense.provision.tree</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" string="Invoice">
                    <field name="partner_id" groups="base.group_user" string="Customer"/>
                    <field name="date_invoice"/>
                    <field name="number"/>
                    <field name="user_id"/>
                    <field name="date_due"/>
                    <field name="origin"/>
                    <field name="amount_untaxed" string="Tax Excluded" sum="Total"/>
                    <field name="amount_tax" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="provision_expense_form" model="ir.ui.view">
            <field name="name">expense.provision.form</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <form string="Expense Provision" class="o_invoice_form">
                    <header>
                        <button name="action_expense_open" type="object" states="draft" string="Validate" class="oe_highlight o_invoice_validate" groups="account.group_account_invoice"/>
                        <button name="action_create_invoice" type="object" states="open" string="Create Invoice" class="oe_highlight o_invoice_validate" groups="account.group_account_invoice"/>
                        <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,open,invoiced"/>
                    </header>
                    <sheet string="Expense Provision">
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <h1 class="mt0">
                            <div>
                                <field name="number" readonly="1" class="oe_inline" attrs="{'invisible': [('state','in',('draft',))]}"/>
                            </div>
                        </h1>
                        <group>
                            <group>
                                <field string="Proveedor" name="partner_id" widget="res_partner_many2one"
                                       context="{'search_default_customer':0, 'show_address': 1, 'default_is_company': True, 'show_vat': True}"
                                       options="{&quot;always_reload&quot;: True, &quot;no_quick_create&quot;: True}" domain="[('supplier', '=', True)]" required="1"/>
                            </group>
                            <group>
                                <field name="date_invoice" string="Fecha" options="{'datepicker': {'warn_future': true}}"/>
                                <field name="date_due" string="Fecha de Posible Ingresoaccount_id"/>
                                <label for="currency_id" groups="base.group_multi_currency"/>
                                <div groups="base.group_multi_currency">
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}" class="oe_inline"/>
                                    <field name="company_currency_id" invisible="1"/>
                                </div>

                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Provisiones">
                                <field name="expense_line_ids"
                                       nolabel="1"
                                       widget="section_and_note_one2many"
                                       mode="tree"
                                       context="{'journal_id': journal_id, 'default_expense_provision_id': id}"
                                >
                                    <tree string="Invoice Lines" editable="bottom">
                                        <control>
                                            <create string="Añadir un elemento"/>
                                        </control>

                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" domain="[('sale_ok','=',True)]"/>
                                        <field name="origin" invisible="1"/>
                                        <field name="name" widget="section_and_note_text"/>
                                        <field name="company_id" invisible="1"/>
                                        <field
                                                name="account_id"
                                                groups="account.group_account_user"
                                                domain="[('company_id', '=', parent.company_id), ('internal_type', '=', 'other'), ('deprecated', '=', False)]"
                                        />

                                        <field name="quantity"/>
                                        <field name="price_unit" string="Precio"/>
                                        <field name="provision_line_tax_ids" widget="many2many_tags" options="{'no_create': True}" context="{'tree_view_ref': 'account.account_tax_view_tree', 'search_view_ref': 'account.account_tax_view_search'}"
                                               domain="[('type_tax_use','=','sale'),('company_id', '=', parent.company_id)]"/>
                                        <field name="price_subtotal" string="Subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <field name="price_total" string="Total" groups="account.group_show_line_subtotals_tax_included"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                </group>
                                <field name="comment" placeholder="Terms and conditions..."/>
                            </page>
                            <page string="Otra Información" name="other_info">
                                <group>
                                    <group>
                                        <field name="journal_id" groups="account.group_account_user"
                                               options="{'no_create': True}" />
                                        <field domain="[('company_id', '=', company_id),('internal_type','=', 'receivable'), ('deprecated', '=', False)]"
                                               name="account_id" groups="account.group_account_user"/>
                                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                        <!--<field name="reference" attrs="{'readonly':[('state','!=','draft')]}"/>-->
                                        <field name="name"/>
                                    </group>
                                    <group>
                                        <field name="move_id" groups="account.group_account_user" attrs="{'invisible': [('move_id', '=', False)]}"/>
                                        <field name="origin" groups="base.group_user" attrs="{'invisible': [('origin', '=', False)]}"/>
                                        <field name="invoice_id" groups="base.group_user" attrs="{'invisible': [('invoice_id', '=', False)]}"/>
                                        <field name="rt_service_product_id" groups="base.group_user"   attrs="{'invisible': [('rt_service_product_id', '=', False)], 'readonly': [('rt_service_product_id', '!=', False)]}"/>
                                    </group>
                                </group>
                                <field name="tax_line_ids">
                                    <tree editable="bottom" string="Taxes" create="0">
                                        <field name="name"/>
                                        <!--Need invisible fields for on_change to create all necessary info -->
                                        <field name="tax_id" invisible="1"/>
                                        <field name="sequence" invisible="1"/>
                                        <field name="manual" invisible="1"/>
                                        <field name="account_id" groups="account.group_account_user"/>
                                        <field name="amount" invisible="1"/>
                                        <field name="account_analytic_id" domain="[('company_id', '=', parent.company_id)]" groups="analytic.group_analytic_accounting"/>
                                        <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                        <field name="amount_rounding" invisible="1"/>
                                        <field name="amount_total"/>
                                        <field name="currency_id" invisible="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="provision_expense_kanban" model="ir.ui.view">
            <field name="name">expense.provision.kanban</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="date_invoice" string="Fecha"/>
                    <field name="state"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><span><t t-esc="record.partner_id.value"/></span></strong>
                                    </div>
                                    <strong><field name="amount_total" widget="monetary"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><t t-esc="record.number.value"/> <t t-esc="record.date_invoice.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="float-right text-right">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'cancel': 'default', 'none': 'danger', 'open': 'warning',
                                            'invoiced': 'success'}}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="provision_expense_pivot" model="ir.ui.view">
            <field name="name">expense.provision.pivot</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <pivot string="Expenses Provisions" display_quantity="true">
                    <field name="partner_id"/>
                    <field name="amount_total" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="provision_expense_calendar" model="ir.ui.view">
            <field name="name">expense.provision.calendar</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <calendar string="Expenses Provision" date_start="date_invoice" color="journal_id">
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                </calendar>
            </field>
        </record>


        <record id="provision_expense_graph" model="ir.ui.view">
            <field name="name">expense.provision.graph</field>
            <field name="model">expense.provision</field>
            <field name="arch" type="xml">
                <graph string="Invoices">
                    <field name="partner_id"/>
                    <field name="amount_total" type="measure"/>
                </graph>
            </field>
        </record>


        <record id="action_exprense_provision" model="ir.actions.act_window">
            <field name="name">Provisions</field>
            <field name="res_model">expense.provision</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="context">{'journal_type': 'purchase'}</field>
            <field name="search_view_id" ref="view_expense_provision_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
            </p>
            </field>
        </record>

        <!-- menu item -->

        <menuitem name="Provisions" id="expense_provision_menu" parent="account.menu_finance_payables"
                  action="action_exprense_provision"/>


    </data>
</odoo>